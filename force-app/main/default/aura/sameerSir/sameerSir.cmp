<aura:component controller="sameerSirApex" implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction" access="global" >
    
    
    <aura:attribute name="FirstName" type="String"  />
    <lightning:input type="String" name="FirstName" label="FirstName" value="{!v.FirstName}" />
 
    <aura:attribute name="LastName" type="String"  />
    <lightning:input type="String" name="LastName" label="LastName" value="{!v.LastName}" />
    
     
     <aura:attribute name="Email" type="String"  />
      <lightning:input type="String" name="Email" label="Email" value="{!v.Email}" />
    
    <aura:attribute name="Phone" type="String"  />
      <lightning:input type="String" name="Phone" label="Phone" value="{!v.Phone}" />
       
      <lightning:button variant="success" label="Success" title="Success" onclick="{! c.handleClick }"/>
    </aura:component>